{
    "env": {
        "browser": true,
        // "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential",
        // 解决interface关键字等识别报错的问题
        "@vue/typescript-eslint/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
        // parserOptions.parser配置使用typescript语法插件的parser就可以正确识别项目中.vue文件的ts代码
        // 解决interface关键字等识别报错的问题
        // "parser": "@typescript-eslint/parser"
    },
    "plugins": ["vue"],
    "rules": {
        "semi": ["warn", "never"]
    }
}
